{"ast":null,"code":"import Comfortable from 'comfortable-javascript';\nimport { comfortable } from '@/comfortable.js';\nimport _ from 'lodash';\nexport default {\n  name: 'blogPost',\n  data() {\n    return {\n      post: null,\n      author: null\n    };\n  },\n  methods: {\n    getPost() {\n      const options = {\n        embedAssets: true,\n        includes: 1,\n        filters: new Comfortable.Filter().addAnd('slug', 'equal', this.$route.params.slug)\n      };\n      comfortable.getDocuments(options).then(result => {\n        this.post = result.data[0];\n        this.author = _.find(result.includes.author, {\n          meta: {\n            id: this.post.fields.author[0].meta.id\n          }\n        });\n      }).catch(err => {\n        throw err;\n      });\n    }\n  },\n  created() {\n    this.getPost();\n  }\n};","map":{"version":3,"names":["Comfortable","comfortable","_","name","data","post","author","methods","getPost","options","embedAssets","includes","filters","Filter","addAnd","$route","params","slug","getDocuments","then","result","find","meta","id","fields","catch","err","created"],"sources":["src/views/BlogPost.vue"],"sourcesContent":["<template>\r\n    <div class=\"post\" v-if=\"post && author\">\r\n      <article>\r\n        <div class=\"image\">\r\n          <img :alt=\"post.fields.title\" :src=\"`${post.fields.image[0].fields.file.url}?w=1680&h=750&fit=crop`\">\r\n        </div>\r\n        <div class=\"content-wrapper\">\r\n          <h2>{{ post.fields.title }}</h2>\r\n          <div class=\"content\" v-html=\"post.fields.content.html\"></div>\r\n          <div class=\"author\">\r\n            <img :src=\"`${author.fields.avatar[0].fields.file.url}?w=30&h=30&fit=crop`\" alt=\"author.fields.name\"> Written by {{ author.fields.name }}\r\n          </div>\r\n        </div>\r\n      </article>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\n    import Comfortable from 'comfortable-javascript';\r\n    import { comfortable } from '@/comfortable.